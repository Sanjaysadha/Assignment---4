#include <stdio.h>

struct player {
    char name[50];
    int runs;
};

int main() {
    int i, n, total_runs = 0;
    printf("Enter the number of players: ");
    scanf("%d", &n);
    struct player players[n];
    for (i = 0; i < n; i++) {
        printf("Enter the name of player %d: ", i+1);
        scanf("%s", players[i].name);
        printf("Enter the runs scored by player %d: ", i+1);
        scanf("%d", &players[i].runs);
        total_runs += players[i].runs;
    }
    printf("Total runs scored by the cricket team: %d\n", total_runs);
    return 0;
}
