#include <stdio.h>

#define MAX_EMPLOYEES 100

struct employee {

    int eno;

    char ename[50];

    float salary;

};

int main() {

    int n, i, highest_salary_index;

    struct employee employees[MAX_EMPLOYEES];

    float highest_salary = 0.0;

    printf("Enter the number of employees: ");

    scanf("%d", &n);



    for (i = 0; i < n; i++) {

        printf("\nEnter details of employee %d:\n", i+1);

        printf("Employee number: ");

        scanf("%d", &employees[i].eno);

        printf("Employee name: ");

        scanf("%s", employees[i].ename);

        printf("Employee salary: ");

        scanf("%f", &employees[i].salary);

    }



    for (i = 0; i < n; i++) {

        if (employees[i].salary > highest_salary) {

            highest_salary = employees[i].salary;

            highest_salary_index = i;

        }

    }



    printf("\nDetails of employee with highest salary:\n");

    printf("Employee number: %d\n", employees[highest_salary_index].eno);

    printf("Employee name: %s
